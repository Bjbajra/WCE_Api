<hr>
<table class="table table-bordered table-striped table-hover table-sm">
    <thead class="table-dark">
        <tr>
            <th></th>
            <th>CourseNumber</th>
            <th>Title</th>
            <th>Duration</th>
            <th>Description</th>
            <th>Level</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @if(Model.Count() == 0)
        {
            <tr colspan="7">
                <td>No rows match search criteria!</td>
            </tr>
        }
        else{
        foreach (var course in Model)
        
        {
            <tr>
                <td style="text-align: center;"><a asp-action="EditCourse" class="btn btn-primary" asp-route-id="@course.Id"><i
                        class="fad fa-pencil-alt"></i></a></td>                 
                <td>@course.CourseNumber</td>
                <td>@course.Title</td>
                <td>@course.Duration</td>
                <td>@course.Description</td>
                <td>@course.Level</td>
                <td>@course.Status</td>                
                <th style="text-align: center; font-style: italic; "><a asp-action="CourseDetail"
                    asp-route-courseNo="@course.CourseNumber"><i class="fal fa-info-circle"></i></a></th>
                 <th style="text-align: center; font-style: italic; "><a asp-action="Delete" 
                    asp-route-id="@course.Id"><i class="fad fa-trash"></i></a></th>
            </tr>
        }
        }
    </tbody>
</table>
