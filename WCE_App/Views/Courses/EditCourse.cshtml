 @model WCE_App.ViewModels.EditCourseViewModel 

 @{
   Layout ="_layout1";
 }

 <form asp-controller="Courses" asp-action="EditCourse" method="POST">
  <div class="card">
    <div class="card-header">
      <h4>Edit</h4>
    </div>
    <div class="card-body p-3">
      <div class="mb-3">
        <label class="form-label" asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration" />
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form> 