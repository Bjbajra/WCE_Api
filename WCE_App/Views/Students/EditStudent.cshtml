@model WCE_App.ViewModels.EditStudentViewModel

@{
    Layout = "_Layout1";
}

<form asp-controller="Students" asp-action="EditStudent" method="POST">
  <div class="card">
    <div class="card-header">
      <h4>Edit</h4>
    </div>
    <div class="card-body p-3">
      <div class="mb-3">
        <label class="form-label" asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="MobileNumber"></label>
        <input class="form-control" asp-for="MobileNumber" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form> 