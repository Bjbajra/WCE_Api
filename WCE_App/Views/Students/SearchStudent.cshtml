 @model WCE_App.ViewModels.SearchStudentViewModel


<div asp-controller="Students" asp-action="SearchStudent" method="POST" >
    <div class="card" style="width: 18rem;">
        <h2 style="text-align: center;">Student Info</h2>
        
        <hr />
        <div class="card-body">
            <div class="p-3">
                <div class="mb-3">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName">
                </div>
                <div class="mb-3">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName">
                </div>
                <div class="mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email">
                </div>               
                <div class="mb-3">
                    <label asp-for="MobileNumber"></label>
                    <input asp-for="MobileNumber">
                </div>
                <div class="mb-3">
                    <label asp-for="Address"></label>
                    <input asp-for="Address">
                </div>
            </div>
        </div>
    </div>

</div> 

