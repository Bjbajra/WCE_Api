@model IEnumerable<WCE_App.Models.StudentModel>


<a asp-controller="Students" asp-action="Create" class="btn btn-primary">Add new student</a>
<form asp-controller="Students" asp-action="SearchStudent" method="POST">     
    <div class="card">
        <div class="card-body p-3">
            <div class="mb-3">
                <input class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>    
</form>

<hr>
<table class="table table-bordered table-striped table-hover table-sm">
    <thead class="table-dark">
        <tr>
            <th></th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>MobileNumber</th>
            <th>Address</th>
            <th></th>
           
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr colspan="7">
                <td>No rows match search criteria!</td>
            </tr>
        }
        else
        {
            foreach (var student in Model)
            {
                <tr>
                    <td style="text-align: center;"><a asp-action="EditStudent" class="btn btn-primary"
                    asp-route-id="@student.Id"><i class="fad fa-pencil-alt"></i></a></td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.MobileNumber</td>
                    <td>@student.Address</td>
                    <th style="text-align: center; font-style: italic; "><a asp-action="Delete" asp-route-id="@student.Id"><i
                        class="fad fa-trash"></i></a></th>
                    
                </tr>
            }
        }
    </tbody>
</table>